#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/runner'

if RUBY_VERSION < '1.9'
  puts 'Ruby interpreter version 1.9 is needed!'
  exit
end

# Store the state of the terminal
stty_save = `stty -g`.chomp

begin
  Eggsh::Runner.new.run!
rescue Interrupt => e
  system('stty', stty_save) # Restore
  exit
end

